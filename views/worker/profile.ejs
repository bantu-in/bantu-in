<!DOCTYPE html>
<html lang="en">
    <%- include ../partials/head.ejs %>
<body>
    <%- include ../partials/navbar.ejs %>
    <div class="container">
        <h6>Edit your profile</h6>
        <!-- ADD CONTENT HERE -->
        <form action="/worker/<%- username %>/profile" method="POST">
            <div>
                <div style="width:50%; float: left;">
                    <label>First name</label>
                    <input name="firstName" type="text" value="<%- worker.firstName %>" required>
                    <label>Last name</label>
                    <input name="lastName" type="text" value="<%- worker.lastName%>" required>
                    <label>Email</label>
                    <input name="email" type="text" value="<%- worker.email%>" required>
                    <label>Phone</label>
                    <input name="phone" type="text" value="<%- worker.phone%>" required>
                    <label>Adress</label>
                    <input name="adress" type="text" value="<%- worker.address%>" required>
                </div>
                <div style="width: 30%; float: left; margin-left: 20px;">
                    <label>Username</label>
                    <input name="username" type="text" value="<%- worker.username%>" required>
                    <label>Password</label>
                    <input name="password" type="text" value="<%- worker.password%>" required>
                    <label>Profile Picture</label><br>
                    <form action="#">
                            <div class="file-field input-field">
                              <div class="btn">
                                <span>File</span>
                                <input type="file">
                              </div>
                              <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" >
                              </div>
                            </div>
                          </form>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </form>
    </div>

<%- include ../partials/loadScript.ejs %>
</body>
</html>